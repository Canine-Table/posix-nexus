#nx_include NEX_L:/bc/nex-algebra.bc

define nx_ang_cos(x) {
	x = nx_pt_mod(x, 360)
	if (x < 0)
		x = x + 360
	# reflect across 180째
	if (x > 180)
		x = 360 - x
	# reflect across 90째
	if (x > 90)
		x = 180 - x
	# final range: [0째, 90째]
	return x
}

define nx_ang_sin(x) {
	auto s
	x = nx_pt_mod(x, 360)
	s = 1
	if (x < 0)
		x = x + 360
	if (x > 180) {
		x = x - 180
		s = -1
	}
	if (x > 90)
		x = 180 - x
	return x * s
}

define nx_ang_tan(x) {
	return nx_ang_sin(x)
}

