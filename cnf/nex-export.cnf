##:(Nexus Exports):###########################################################################

export G_NEX_WEB_FETCH="$(g_nx_cmd curl wget)"
export LESS='-R'
export COLORFGBG=';0'
export DIALOGRC="$NEXUS_CNF/.dialogrc"
export PAGER="$(nx_cmd_pager)"
export SHELL="$(nx_cmd_shell)"
export AWK="$(nx_cmd_awk)"
export CC="$(nx_cmd_cc)"
test "$E_NEX_ASM" = true && nx_tex_export
test "$E_NEX_TEX" = true && nx_asm_export
test "$E_NEX_EDITOR" = true && nx_editor_export
tty -s && case "${TERM}" in
	screen*|Eterm*|alacritty*|aterm*|foot*|gnome*|konsole*|kterm*|putty*|rxvt*|tmux*|xterm*)
		{
			export PS1="$(
				printf "\n\[\e[1;37m\]┌──\[\e[m\]%s%s%s%s%s%s\[\e[1;37m\]\n│\n└\[\e[m\]$ " \
					"\[\e[4;1;37m\][$(whoami)]\[\e[m\]" \
					"\[\e[4;1;35m\]{@}\[\e[m\]" \
					"\[\e[4;1;32m\][\H]\[\e[m\]" \
					"\[\e[4;1;31m\](\@)\[\e[m\]" \
					"\[\e[4;1;33m\][\!]\[\e[m\]" \
					"\[\e[4;1;36m\](\w)\[\e[m\]"
			)"
		};;
	*)
	{
		export PS1='\[\e[4;1;32m\])(\w)\[\e[m\]'
	};;
esac


