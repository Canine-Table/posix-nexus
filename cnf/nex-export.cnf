##:(Nexus Exports):###########################################################################

export LESS='-R'
export COLORFGBG=';0'
export PGDATA="/var/lib/postgres/data"
export DIALOGRC="${NEXUS_CNF}/.dialogrc"
export SHELL="$(nx_cmd_shell)"
export AWK="$(nx_cmd_awk)"
export PAGER="$(nx_cmd_pager)"


export G_NEX_CC="$(nx_cmd_cc)"
export G_NEX_CLIPBOARD="$(nx_cmd_clipboard)"
export G_NEX_WGET="$(nx_cmd_wget)"
export G_NEX_PAGER="$(nx_cmd_pager)"
export G_NEX_SOCKETS="$(nx_cmd_sockets)"
export G_NEX_SQL="$(nx_cmd_sql)"
export G_NEX_CONTAINER="$(nx_cmd_container)"

tmpa="/run/user/$(id -u)"
test -d  "$tmpa" -a -r "$tmpa" && {
	export XDG_RUNTIME_DIR="$tmpa"
	export DBUS_SESSION_BUS_ADDRESS="unix:path=$tmpa/bus"
}

export HISTCONTROL='erasedups';
export HISTIGNORE='ls:pwd:cd:echo';
export HISTSIZE=1000000
export HISTFILESIZE=2000000

export ENABLE_PROXY_FIX=True

test "$(nx_info_path -b "G_NEX_CC")" = 'gcc' && export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'
